# ===========================================
# Beauty Salon - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
DB_ROOT_PASSWORD=your_root_password
DB_HOST=mariadb
DB_PORT=3306
DB_USER=beauty_user
DB_PASSWORD=your_secure_password
DB_NAME=beauty_salon

# ===========================================
# Application
# ===========================================
NODE_ENV=development
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here

# ===========================================
# Twilio (WhatsApp)
# ===========================================
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here

# Twilio WhatsApp Sandbox number (or your approved number)
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Salon owner's WhatsApp number (with country code)
SALON_OWNER_PHONE=whatsapp:+5511999999999

# ===========================================
# PIX Configuration
# ===========================================
# Your PIX key (CPF, CNPJ, email, phone, or random key)
PIX_KEY=your_pix_key_here

# Receiver name (as registered with PIX)
PIX_RECEIVER_NAME=Beauty Salon

# City (as registered with PIX)
PIX_CITY=Sao Paulo

# ===========================================
# Facebook OAuth
# ===========================================
# Get these from https://developers.facebook.com
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ===========================================
# Instagram Basic Display API
# ===========================================
# Get this from Facebook Developer Console
# Requires Instagram Basic Display API setup
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# ===========================================
# URLs
# ===========================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
